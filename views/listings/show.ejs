<% layout('/layouts/boilerplate.ejs') %>

<%
  const fallbackCategory = listing.category || 'Trending';
  const matchedCategory = (categoryOptions || []).find(
    (option) => option.value === fallbackCategory
  );
  const categoryIcon = matchedCategory ? matchedCategory.icon : 'fa-tag';
%>

<div class="listing-show container py-4">
  <div class="row g-4">
    <div class="col-lg-7">
      <div class="card listing-hero mb-4">
        <div class="listing-hero-image">
          <img src="<%= listing.image.url %>" alt="<%= listing.title %>" />
        </div>
        <div class="card-body">
          <div class="d-flex align-items-start justify-content-between gap-3 flex-wrap">
            <div>
              <h2 class="listing-title mb-2"><%= listing.title %></h2>
              <div class="d-flex flex-wrap align-items-center gap-2 mb-3">
                <span class="badge rounded-pill category-badge">
                  <i class="fa-solid <%= categoryIcon %> me-1"></i>
                  <%= fallbackCategory %>
                </span>
                <span class="listing-price fw-semibold">
                  &#8377; <%= listing.price.toLocaleString("en-IN") %>
                  <span class="text-muted">/ night</span>
                </span>
              </div>
              <p class="text-muted mb-2">
                <i class="fa-solid fa-location-dot me-2"></i>
                <%= listing.location %>, <%= listing.country %>
              </p>
            </div>
            <div class="listing-owner text-end">
              <span class="badge rounded-pill bg-light text-dark">
                <i class="fa-solid fa-user-tie me-2"></i>
                Host: <%= listing.owner.username %>
              </span>
            </div>
          </div>
          <p class="mb-0"><%= listing.description %></p>
        </div>
      </div>

      <% if(currentUser && listing.owner._id.equals(currentUser._id)) { %>
        <div class="d-flex gap-2 mb-4 flex-wrap">
          <a href="/listings/<%= listing._id %>/edit" class="btn btn-outline-dark">
            <i class="fa-solid fa-pen-to-square me-2"></i>Edit Listing
          </a>
          <form method="POST" action="/listings/<%= listing._id %>?_method=DELETE">
            <button class="btn btn-danger">
              <i class="fa-solid fa-trash-can me-2"></i>Delete Listing
            </button>
          </form>
        </div>
      <% } %>

      <div class="card review-card mb-4">
        <div class="card-body">
          <h4 class="mb-3">Guest Reviews</h4>
          <% if(currentUser) { %>
            <form action="/listings/<%= listing.id %>/reviews" method="POST" novalidate class="needs-validation mb-4">
              <div class="mb-3">
                <label for="rating" class="form-label">Rating</label>
                <fieldset class="starability-slot">
                  <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="0" checked aria-label="No rating." />
                  <input type="radio" id="first-rate1" name="review[rating]" value="1" />
                  <label for="first-rate1" title="Terrible">1 star</label>
                  <input type="radio" id="first-rate2" name="review[rating]" value="2" />
                  <label for="first-rate2" title="Not good">2 stars</label>
                  <input type="radio" id="first-rate3" name="review[rating]" value="3" />
                  <label for="first-rate3" title="Average">3 stars</label>
                  <input type="radio" id="first-rate4" name="review[rating]" value="4" />
                  <label for="first-rate4" title="Very good">4 stars</label>
                  <input type="radio" id="first-rate5" name="review[rating]" value="5" />
                  <label for="first-rate5" title="Amazing">5 stars</label>
                </fieldset>
              </div>
              <div class="mb-3">
                <label for="comment" class="form-label">Comment</label>
                <textarea id="comment" name="review[comment]" cols="30" rows="5" class="form-control" required></textarea>
                <div class="invalid-feedback">Please submit a comment for review.</div>
              </div>
              <button type="submit" class="btn btn-dark">Submit Review</button>
            </form>
          <% } else { %>
            <div class="alert alert-light border mb-4">
              <i class="fa-solid fa-message me-2"></i>
              <a href="/login" class="fw-semibold text-decoration-none">Log in</a> to leave a review.
            </div>
          <% } %>

          <% if (listing.reviews.length === 0) { %>
            <p class="text-muted mb-0">No reviews yet. Be the first to share your experience!</p>
          <% } else { %>
            <div class="row g-3">
              <% listing.reviews.forEach((review) => { %>
                <div class="col-md-6">
                  <div class="card shadow-sm border-0 h-100">
                    <div class="card-body">
                      <h6 class="card-title mb-2">@<%= review.author.username %></h6>
                      <p class="starability-result mb-2" data-rating="<%= review.rating %>"></p>
                      <p class="card-text mb-0"><%= review.comment %></p>
                    </div>
                    <% if(currentUser && review.author._id.equals(currentUser._id)) { %>
                      <div class="card-footer bg-white border-0 pt-0">
                        <form method="POST" action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE">
                          <button class="btn btn-link text-danger p-0">
                            <i class="fa-solid fa-trash me-1"></i>Delete
                          </button>
                        </form>
                      </div>
                    <% } %>
                  </div>
                </div>
              <% }) %>
            </div>
          <% } %>
        </div>
      </div>
    </div>

    <div class="col-lg-5">
      <div class="card booking-card mb-4">
        <div class="card-body">
          <div class="d-flex justify-content-between align-items-start mb-3">
            <div>
              <h4 class="mb-1">Reserve your stay</h4>
              <small class="text-muted d-block">Flexible cancellation within 48 hours</small>
            </div>
            <span class="price-pill fw-semibold">&#8377; <%= listing.price.toLocaleString("en-IN") %> <small class="text-muted">/ night</small></span>
          </div>

          <% if(!currentUser) { %>
            <div class="alert alert-light border">
              <i class="fa-solid fa-circle-user me-2"></i>
              <a href="/login" class="fw-semibold text-decoration-none">Log in</a> to book this listing.
            </div>
          <% } else if (isOwner) { %>
            <div class="alert alert-warning d-flex gap-2">
              <i class="fa-solid fa-house-lock mt-1"></i>
              <div>
                <strong>Hosting this stay.</strong>
                Guests can book from your public listing page. Monitor reservations below.
              </div>
            </div>
          <% } else { %>
            <% if (myUpcomingBookings.length > 0) { %>
              <div class="alert alert-success d-flex flex-column">
                <div class="d-flex align-items-center gap-2 mb-2">
                  <i class="fa-solid fa-circle-check"></i>
                  <strong>Your trip is booked!</strong>
                </div>
                <% myUpcomingBookings.forEach((booking) => { %>
                  <div class="d-flex justify-content-between align-items-center flex-wrap gap-2 mb-2">
                    <span>
                      <i class="fa-solid fa-calendar-day me-2"></i>
                      <%= booking.checkIn.toLocaleDateString('en-IN', { month: 'short', day: 'numeric' }) %> -
                      <%= booking.checkOut.toLocaleDateString('en-IN', { month: 'short', day: 'numeric' }) %>
                    </span>
                    <form method="POST" action="/listings/<%= listing._id %>/bookings/<%= booking._id %>?_method=DELETE" class="m-0">
                      <button class="btn btn-sm btn-outline-danger">
                        <i class="fa-solid fa-xmark me-1"></i>Cancel
                      </button>
                    </form>
                  </div>
                <% }) %>
              </div>
            <% } %>

            <form action="/listings/<%= listing._id %>/bookings" method="POST" class="needs-validation" novalidate>
              <div class="row g-3">
                <div class="col-12">
                  <label for="checkIn" class="form-label">Check-in</label>
                  <input type="date" class="form-control" id="checkIn" name="booking[checkIn]" data-booking-checkin required>
                  <div class="invalid-feedback">Select your arrival date.</div>
                </div>
                <div class="col-12">
                  <label for="checkOut" class="form-label">Check-out</label>
                  <input type="date" class="form-control" id="checkOut" name="booking[checkOut]" data-booking-checkout required>
                  <div class="invalid-feedback">Select your departure date.</div>
                </div>
                <div class="col-12">
                  <label for="guests" class="form-label">Guests</label>
                  <select id="guests" name="booking[guests]" class="form-select" required>
                    <% for (let i = 1; i <= 10; i++) { %>
                      <option value="<%= i %>"><%= i %> guest<%= i === 1 ? '' : 's' %></option>
                    <% } %>
                  </select>
                </div>
                <div class="col-12">
                  <label for="notes" class="form-label">Notes (optional)</label>
                  <textarea id="notes" name="booking[notes]" class="form-control" rows="3" placeholder="Share arrival details or special requests"></textarea>
                </div>
              </div>
              <button type="submit" class="btn btn-dark w-100 mt-3">
                <i class="fa-solid fa-calendar-check me-2"></i>Book now
              </button>
            </form>
          <% } %>
        </div>
      </div>

      <% if (isOwner && upcomingBookings.length > 0) { %>
        <div class="card owner-bookings">
          <div class="card-body">
            <h5 class="mb-3">Upcoming guest arrivals</h5>
            <div class="list-group dashboard-list">
              <% upcomingBookings.forEach((booking) => { %>
                <div class="list-group-item">
                  <div class="d-flex justify-content-between align-items-start gap-3 flex-wrap">
                    <div>
                      <strong><i class="fa-solid fa-user me-2"></i><%= booking.guest?.username || 'Guest' %></strong>
                      <div class="text-muted small">
                        <i class="fa-solid fa-calendar-day me-1"></i>
                        <%= booking.checkIn.toLocaleDateString('en-IN', { month: 'short', day: 'numeric' }) %> -
                        <%= booking.checkOut.toLocaleDateString('en-IN', { month: 'short', day: 'numeric' }) %>
                      </div>
                      <div class="small text-muted">
                        <i class="fa-solid fa-users me-1"></i>
                        <%= booking.guests %> guest<%= booking.guests === 1 ? '' : 's' %>
                      </div>
                    </div>
                    <div class="text-end">
                      <div class="fw-semibold">&#8377; <%= booking.totalPrice.toLocaleString('en-IN') %></div>
                      <form method="POST" action="/listings/<%= listing._id %>/bookings/<%= booking._id %>?_method=DELETE" class="mt-2">
                        <button class="btn btn-sm btn-outline-danger">
                          <i class="fa-solid fa-ban me-1"></i>Cancel
                        </button>
                      </form>
                    </div>
                  </div>
                </div>
              <% }) %>
            </div>
          </div>
        </div>
      <% } %>
    </div>
  </div>
</div>