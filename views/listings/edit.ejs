<% layout('/layouts/boilerplate.ejs') -%>

<div class="row">
  <div class="col-8 offset-2">

    <br><br>
    <h2 class="mb-3">Edit Listing</h2>

    <form method="POST" action="/listings/<%= listing._id %>?_method=PUT" novalidate class="needs-validation" enctype="multipart/form-data">

      <!-- Title -->
      <div class="mb-3">
        <label for="title" class="form-label">Title</label>
        <input
          id="title"
          name="listing[title]"
          value="<%= listing.title %>"
          placeholder="Enter title"
          type="text"
          class="form-control"
          required>
      </div>

      <!-- Description -->
      <div class="mb-3">
        <label for="description" class="form-label">Description</label>
        <textarea
          id="description"
          name="listing[description]"
          placeholder="Enter description"
          class="form-control"
          rows="3"
          required><%= listing.description %></textarea>
      </div>

      <div class="mb-3">
        Original Image 
        <img src="<%= orgImg%>" >
      </div>

      <!-- Image -->
      <div class="mb-3">
        <label for="image" class="form-label">Upload Image</label>
        <input 
          name="listing[image]" 
          type="file" 
          class="form-control"
          >
         
      </div>

      <!-- Price & Country -->
      <div class="row">
        <div class="mb-3 col-md-4">
          <label for="price" class="form-label">Price (â‚¹)</label>
          <input
            id="price"
            name="listing[price]"
            value="<%= listing.price %>"
            placeholder="Enter price"
            type="number"
            class="form-control"
            required>
        </div>

        <div class="mb-3 col-md-8">
          <label for="country" class="form-label">Country</label>
          <input
            id="country"
            name="listing[country]"
            value="<%= listing.country %>"
            placeholder="Enter country"
            type="text"
            class="form-control"
            required>
        </div>
      </div>

      <!-- Location -->
      <div class="mb-3">
        <label for="location" class="form-label">Location</label>
        <input
          id="location"
          name="listing[location]"
          value="<%= listing.location %>"
          placeholder="Enter location"
          type="text"
          class="form-control"
          required>
      </div>

      <!-- Category -->
      <div class="mb-3">
        <label for="category" class="form-label">Category</label>
        <select
          id="category"
          name="listing[category]"
          class="form-select"
          required
        >
          <% if (categoryOptions) { %>
            <% categoryOptions.forEach((option) => { %>
              <option
                value="<%= option.value %>"
                <%= listing.category === option.value ? "selected" : "" %>>
                <%= option.value %>
              </option>
            <% }) %>
          <% } %>
        </select>
        <div class="form-text">Update the vibe guests can expect.</div>
        <div class="invalid-feedback">Please choose a category.</div>
      </div>

      <!-- Submit Button -->
      <button type="submit" class="btn btn-dark">Update Listing</button>
      <br><br><br>
    </form>
  </div>
</div>
